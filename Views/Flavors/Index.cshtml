@{
  Layout = "_Layout";
}

@using FactoryTreats.Models;
@model List<FactoryTreats.Models.Flavor>;

<h1>Flavors</h1>

@{
  int k = 1;
}
@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
} 
<table class = "style" >
  <tr>
    <th>Number</th>
    <th>Flavor Name</th>
  </tr>
    @foreach(Flavor flavor in Model)
    {
      <tr>
        <td>@Html.ActionLink($"{k}", "Details", new { id = flavor.FlavorId })</td>
        <td>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</td>
      </tr>
      k+=1;
    }
</table>

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>