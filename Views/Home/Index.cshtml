@{
  Layout = "_Layout";
}
@{
    ViewBag.Title = "Pierre's Sweet and Savory Treats";
}

<div class="jumbotron">
    <h1>Pierre's Sweet and Savory Treats</h1>
</div>
<div class="row">
    <div class="col-md-3">
        <h2>Welcome to Pierre's Sweet and Savory Treats</h2>
        <p>Pierre's Sweet and Savory Treats is a sample application that
        demonstrates how to use Entity Framework 6 in an 
        ASP.NET MVC 5 web application.</p>
    </div>
    <div class="col-md-3">
      <p>@Html.ActionLink("See all Flavors", "Index", "Flavors")</p>   
    </div>
    <div class="col-md-3">
        <p>@Html.ActionLink("Create a new Flavor", "Create", "Flavors")</p>
        <hr />
        <p>@Html.ActionLink("Add a new Treat", "Create", "Treats")</p>
    </div>
    <div class="col-md-3">
        <p>@Html.ActionLink("See all Treats", "Index", "Treats")</p> 
    </div>

@using FactoryTreats.Models;
@model List<FactoryTreats.Models.TreatFlavor>;

<h1>Treats and Flavors</h1>

@{
  int k = 1;
}
 
<table class = "style" >
  <tr>
    <th>Number</th>
    <th>Flavor Name</th>
    <th>Treat Name</th>
  </tr>
    @foreach(TreatFlavor treatflavor in Model)
    {
      <tr>
        <td>@Html.Label($"{k}")</td>
        <td>@Html.ActionLink($"{treatflavor.Flavor.FlavorName}", "Details", "Flavors",new { id = treatflavor.Flavor.FlavorId })</td>
        <td>@Html.ActionLink($"{treatflavor.Treat.TreatName}", "Details", "Treats", new { id = treatflavor.Treat.TreatId })</td>
      </tr>
      k+=1;
    }
</table>
</div>



